<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bga">

    <!-- Included header.xml here -->
    <ViewStub android:id="@+id/vsHeader"
        android:inflatedId="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/header" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="6dip">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
            <Button
                android:id="@+id/Bengali"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/ben"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/Devanagari"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/sans"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/English"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/eng"
                android:textColor="#ffffff"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/Gujarathi"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/guj"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/hindi"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/hin"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/Kannada"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/kan"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/Malayalam"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/mal"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/Tamil"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/tam"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/Telugu"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicker"
                android:text="@string/tel"
                android:textColor="#ffffff"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>